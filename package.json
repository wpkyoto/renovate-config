{
  "name": "@wpkyoto/renovate-config",
  "version": "1.0.0",
  "description": "Renovate configurations for wpkyoto Projects",
  "scripts": {
    "test": "renovate-config-validator",
    "semantic-release": "semantic-release"
  },
  "keywords": [],
  "author": "wpkyoto",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/wpkyoto/renovate-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wpkyoto/renovate-config.git"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
        ":prConcurrentLimit10",
        ":timezone(Asia/Tokyo)",
        "github>hatena/renovate-config:automergePin",
        "github>hatena/renovate-config:automergeTypesMinor"
      ],
      "schedule": [
        "every weekend"
      ],
    "automerge": true,
      "vulnerabilityAlerts": {
        "enabled": true
      },
      "lockFileMaintenance": {
        "enabled": true,
        "schedule": [
          "before 3am on the first day of the month"
        ]
      },
      "minor": {
        "groupName": "all dependencies"
      }
    },
    "aws-cdk": {
      "extends": [
        "config:base"
      ],
      "timezone": "Asia/Tokyo",
      "schedule": ["every weekend"],
      "lockFileMaintenance": {
        "enabled": true,
        "schedule": [
          "before 3am on the first day of the month"
        ]
      },
      "packageRules": [
        {
          "packagePatterns": [
            "@aws-cdk/*",
            "aws-cdk"
          ],
          "groupName": "CDK-Resources"
        }
      ],
      "minor": {
        "groupName": "all dependencies"
      }
    },
    "commitlint": {
      "extends": [
        "@wpkyoto:default"
      ],
      "packageRules": [{
        "packagePatterns": [
          "@commitlint/*"
        ],
        "groupName": "commitlint",
        "automerge": true
      }]
    },
    "typescript": {
      "extends": [
        "@wpkyoto:default"
      ],
      "packageRules": [{
        "packagePatterns": [
          "typescript",
          "ts-node",
          "tsdx"
        ],
        "groupName": "typescript"
      }]
    },
    "jest": {
      "extends": [
        "@wpkyoto:default"
      ],
      "packageRules": [{
        "packagePatterns": [
          "jest*",
          "ts-jest",
          "jest"
        ],
        "groupName": "Jest resources"
      }]
    },
    "examples": {
      "extends": [
        "config:base",
        "github>hatena/renovate-config:schedule"
      ],
      "automerge": true,
      "vulnerabilityAlerts": {
        "enabled": true
      },
      "lockFileMaintenance": {
        "enabled": true
      },
      "minor": {
        "groupName": "all dependencies"
      }
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }  
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "husky": "4.3.0",
    "lint-staged": "10.4.0",
    "renovate": "23.43.1",
    "semantic-release": "17.1.2"
  }
}
