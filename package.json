{
  "name": "@digitalcube/renovate-config",
  "version": "1.0.0",
  "description": "Renovate configurations for Digitalcube Projects",
  "scripts": {
    "test": "renovate-config-validator",
    "semantic-release": "semantic-release"
  },
  "keywords": [],
  "author": "Digitalcube",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/megumiteam/renovate-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/megumiteam/renovate-config.git"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base"
      ],
      "timezone": "Asia/Tokyo",
      "schedule": [
        "every weekend"
      ],
      "lockFileMaintenance": {
        "enabled": true,
        "schedule": [
          "before 3am on the first day of the month"
        ]
      },
      "minor": {
        "groupName": "all dependencies"
      }
    },
    "aws-cdk": {
      "extends": [
        "config:base"
      ],
      "timezone": "Asia/Tokyo",
      "schedule": ["every weekend"],
      "lockFileMaintenance": {
        "enabled": true,
        "schedule": [
          "before 3am on the first day of the month"
        ]
      },
      "packageRules": [
        {
          "packagePatterns": [
            "@aws-cdk/*",
            "aws-cdk"
          ],
          "groupName": "CDK-Resources"
        }
      ],
      "minor": {
        "groupName": "all dependencies"
      }
    },
    "examples": {
      "extends": [
        "config:base"
      ],
      "automerge": true,
      "vulnerabilityAlerts": {
        "enabled": true
      },
      "lockFileMaintenance": {
        "enabled": true
      },
      "minor": {
        "groupName": "all dependencies"
      }
    }
  },
  "devDependencies": {
    "renovate": "21.6.3",
    "semantic-release": "17.0.8"
  }
}
